<h1>@ViewBag.title</h1>

<form action="/Search/Results" method="post">
	<h2>Search by:</h2>

	<p>
		@foreach (KeyValuePair<string, string> column in ViewBag.columns)
		{
			<span>
				<input type="radio"
					   name="searchType"
					   id="@column.Key"
					   value="@column.Key"
					   checked="@column.Key == 'all''" />
				<label for="@column.Key">@column.Value</label>
			</span>
		}
	</p>

	<p>
		<label for="searchTerm">Keyword:</label>
		<input type="text" name="searchTerm" id="searchTerm" />
	</p>

	<input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.allJobs != null)
{
	<h3>@ViewBag.allJobs.Count Result(s)</h3>

	// TODO #2 - Loop over jobs dictionary and display all job fields

	@foreach (Dictionary<string, string> jobs in ViewBag.allJobs)
	{
		
			<div>

				<table>

					<tbody>
						@foreach (KeyValuePair<string, string> job in jobs)
						{
							<tr>
								<td>@(String.Format("{0}", job.Key))</td>
								<td>@(String.Format("{0}", job.Value))</td>
							</tr>
						}


					</tbody>

				</table>
				<br />
				<h3>****************</h3>
				<br/>
			</div>
		}
	
}
